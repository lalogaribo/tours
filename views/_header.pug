header.header
  nav.nav.nav--tours
    a.nav__el(href="/") All Tours
  .header__logo
    img(src='/img/logo-white.png' alt='Natours logo')
  nav.nav.nav--user
    //- a.nav__el(href='#') My Bookings
    //- a.nav__el(href='#')
    //-   img.nav__user-img(src="#", alt="User photo")
    //-   span= user
    //- button.nav__el Log in
    if user
      a.nav__el(href='#') My Bookings
      a.nav__el.nav__el--logout(href="/logout") Log out
      a.nav__el(href="myAccount")
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`${user.name}`)
        span= user.name.split(' ')[0]
    unless user
      a.nav__el(href="/login") Log in
      button.nav__el.nav__el--cta Sign up